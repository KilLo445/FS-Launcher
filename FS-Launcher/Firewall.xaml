<Window x:Class="FS_Launcher.Firewall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FS_Launcher"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="Black"
        AllowsTransparency="True"
        Title="Firewall" Height="450" Width="800">
    <Grid>
        <Image Name="BackgroundImage" Source="Images/BG/BG3.jpg" Opacity="0.2" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Text="What firewall software would you like to use?" Foreground="White" FontFamily="/Fonts/Poppins/#Poppins" FontWeight="Light" FontSize="22" Width="320" TextAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
    </Grid>
</Window>
